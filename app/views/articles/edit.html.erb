<nav class="navbar d-flex navbar-light bg-light p-4">
  <h3 display-3>Wikinimous</h3>

  <div class="d-flex">
    <a class="btn btn-primary" href="/articles/new">New Article</a>
  </div>
</nav>

<div class='container mt-4'>
<h1 class="display-4">Editing Article</h1>
  <%= form_with model: @article do |a| %>
    <div class='mb-3'>
      <%= a.label :title, class: 'form-label' %>
      <%= a.text_field :title, class: 'form-control' %>
    </div>
    <div class='mb-3'>
      <%= a.label :content, class: 'form-label' %>
      <div id="ace-editor" style="height: 300px; width: 100%;" class="form-control"></div>
      <%= a.hidden_field :content, id: 'article_content' %>
    </div>
    <%= a.submit "Update Article", class: 'btn btn-primary' %>
  <% end %>
  <div class="mt-3">
  <%= link_to "Show", article_path %> | <%= link_to "Back", articles_path %>
  </div>
</div>
